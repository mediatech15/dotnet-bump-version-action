{
  "name": "dotnet-bump-version-action",
  "version": "1.0.0",
  "description": "A GitHub Action to easily bump .NET Core project version files(.csproj). Updated and improved for expected semantic changes. Forked from SiqiLu/dotnet-bump-version",
  "main": "lib/index.js",
  "scripts": {
    "build": "npx esbuild ./src/Main.ts --outfile=./lib/index.js --bundle --platform=node",
    "lint": "npx ts-standard",
    "format": "npx ts-standard --fix"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:mediatech15/dotnet-bump-version-action.git"
  },
  "keywords": [
    "github",
    "actions",
    "dotnet",
    "bump",
    "version"
  ],
  "author": "mediatech15",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.9.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^5.0.3",
    "globby": "^13.1.2",
    "semver": "^7.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.17",
    "esbuild": "^0.20.0",
    "ts-standard": "^12.0.2",
    "typescript": "^4.7.4"
  },
  "ts-standard": {
    "ignore": [
      "lib",
      "node_modules"
    ]
  }
}